			section.profile-section.db-section
				header.db-section__header
					h1.db-section__title Đăng nhận xét của bạn:
				
				form.form.form--profile
					+form-row("Đánh giá")
						div.profile-fix__rating: .rating
							span.rating__star ☆
							span.rating__star ☆
							span.rating__star ☆
							span.rating__star ☆
							span.rating__star ☆
					+form-row("Tiêu đề")
